<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="56dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:id="@+id/unblast"
        android:textStyle="bold"
        android:text="Unblast"
        app:layout_constraintLeft_toRightOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="2 hrs."
        app:layout_constraintLeft_toRightOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@id/unblast" />
    <ImageView
        android:layout_width="17dp"
        android:layout_height="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_1"
        app:layout_constraintLeft_toRightOf="@id/time"
        app:layout_constraintTop_toBottomOf="@id/unblast" />
    <ImageView
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/three"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginRight="48dp"
        android:text="Buckle up ,because change is coming to WordPress"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time" />
    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="176dp"
        android:text="http://unblast.com/color-schemes"
        android:textColor="#3044C5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post" />
    <ImageView
        android:id="@+id/postphoto"
        android:layout_width="411dp"
        android:layout_height="296dp"
        android:src="@drawable/img_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/link" />
    <ImageView
        android:id="@+id/like"
        android:layout_width="51dp"
        android:layout_height="41dp"
        android:src="@drawable/like"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postphoto" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:text="12"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/like"
        app:layout_constraintTop_toBottomOf="@id/postphoto" />
    <TextView
        android:id="@+id/numbershare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="216dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="308dp"
        android:text="1 Share"
        app:layout_constraintRight_toLeftOf="@id/smallicon"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@id/postphoto" />
    <ImageView
        android:id="@+id/smallicon"
        android:layout_width="31dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/img"
        app:layout_constraintRight_toLeftOf="@id/drop"
        app:layout_constraintTop_toBottomOf="@id/postphoto" />
    <ImageView
        android:id="@+id/drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/drop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postphoto" />
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/iconcomment"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageView
        android:id="@+id/emptylike"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/emptylike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/wordlike"
        android:layout_width="47dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:text="Like"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/emptylike" />

    <ImageView
        android:id="@+id/iconcomment"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/iconcomment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/wordlike" />

    <TextView
        android:id="@+id/wordcomment"
        android:layout_width="71dp"
        android:layout_height="21dp"
        android:layout_marginLeft="16dp"
        android:textSize="15dp"
        android:layout_marginBottom="16dp"
        android:text="Comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iconcomment" />
    <ImageView
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/shareicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/wordcomment" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>